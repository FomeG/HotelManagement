<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_booking_payment_wizard_form" model="ir.ui.view">
        <field name="name">hotel.booking.payment.wizard.form</field>
        <field name="model">hotel.booking.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Thanh toán">
                <group>
                    <field name="booking_id" invisible="1"/>
                    <field name="hotel_id" readonly="1"/>
                    <field name="room_id" readonly="1"/>
                    <field name="payment_amount"/>
                </group>
                <footer>
                    <button name="action_confirm_payment"
                        string="Xác nhận"
                        type="object"
                        class="btn-primary"/>
                    <button special="cancel"
                        string="Hủy"
                        class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>