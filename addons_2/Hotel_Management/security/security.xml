<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Create new category -->
        <record id="module_hotel_management" model="ir.module.category">
            <field name="name">Quản lý khách sạn</field>
            <field name="description">Quản lý quyền truy cập cho khách sạn</field>
            <field name="sequence">20</field>
        </record>

        <!-- Update category reference in groups -->
        <record id="group_hotel_emp" model="res.groups">
            <field name="name">Nhân viên</field>
            <field name="category_id" ref="module_hotel_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Quản lý</field>
            <field name="category_id" ref="module_hotel_management"/>
            <field name="implied_ids"
                eval="[
                (4, ref('base.group_user')),
                (4, ref('group_hotel_emp'))
            ]"/>
        </record>
    </data>
</odoo>