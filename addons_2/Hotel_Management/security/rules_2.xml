<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Danh mục khách sạn rules -->
    <!-- Danh mục khách sạn:
    + Nhân viên: chỉ nhìn thấy 'danh mục khách sạn’ mà nhân viên nằm trong danh sách nhân viên của KS.
    + Quản lý: nhìn thấy danh ‘mục khách sạn’ mà mình đang quản lý
    + Quản trị viên: nhìn thấy full ‘danh mục khách sạn’ -->

    <record id="hotel_employee_rule" model="ir.rule">
        <field name="name">Employee Hotel Rule</field>
        <field name="model_id" ref="model_hotel_management" />
        <field name="domain_force">[('employee_ids', 'in', user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_employee'))]" />
    </record>

    <record id="hotel_manager_rule" model="ir.rule">
        <field name="name">Manager Hotel Rule</field>
        <field name="model_id" ref="model_hotel_management" />
        <field name="domain_force">[('manager_id', '=', user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_manager'))]" />
    </record>

    <record id="hotel_admin_rule" model="ir.rule">
        <field name="name">Admin Hotel Rule</field>
        <field name="model_id" ref="model_hotel_management" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_admin'))]" />
    </record>


    <!-- Danh mục phòng rules -->
    <!-- Danh mục phòng:
    + Nhân viên: chỉ nhìn thấy ‘danh mục phòng’ thuộc khách sạn của nhân viên đó.
    + Quản lý: chỉ nhìn thấy ‘danh mục phòng’ thuộc khách sạn đang nhìn thấy.
    + Quản trị viên: nhìn được full ‘danh mục phòng’ -->
    <record id="room_employee_rule" model="ir.rule">
        <field name="name">Employee Room Rule</field>
        <field name="model_id" ref="model_hotel_room" />
        <field name="domain_force">[('hotel_id.employee_ids', 'in', user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_employee'))]" />
    </record>


    <record id="room_manager_rule" model="ir.rule">
        <field name="name">Manager Room Rule</field>
        <field name="model_id" ref="model_hotel_room" />
        <field name="domain_force">[('hotel_id.manager_id', '=', user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_manager'))]" />
    </record>

    <record id="room_admin_rule" model="ir.rule">
        <field name="name">Admin Room Rule</field>
        <field name="model_id" ref="model_hotel_room" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_admin'))]" />
    </record>


    <!-- Đơn đặt phòng rules -->
    <!-- Chức năng: Đơn đặt phòng
    + Nhân viên: chỉ được nhìn những ‘đơn đặt phòng’ do mình tạo ra.
    + Quản lý: được nhìn thấy những ‘đơn đặt phòng’ thuộc khách sạn mình quản lý.
    + Quản trị viên: nhìn thấy tất cả ‘đơn đặt phòng’ -->
    <record id="booking_employee_rule" model="ir.rule">
        <field name="name">Employee Booking Rule</field>
        <field name="model_id" ref="model_hotel_booking" />
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_employee'))]" />
    </record>

    <record id="booking_manager_rule" model="ir.rule">
        <field name="name">Manager Booking Rule</field>
        <field name="model_id" ref="model_hotel_booking" />
        <field name="domain_force">[('hotel_id.manager_id', '=', user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_manager'))]" />
    </record>

    <record id="booking_admin_rule" model="ir.rule">
        <field name="name">Admin Booking Rule</field>
        <field name="model_id" ref="model_hotel_booking" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_admin'))]" />
    </record>


    <!-- Danh mục khách sạn rules -->


</odoo>