<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- Only see own records rule -->
        <record id="hotel_booking_user_rule" model="ir.rule">
            <field name="name">See Own Bookings</field>
            <field name="model_id" ref="model_hotel_booking" />
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_emp'))]" />
        </record>

        <!-- Manager sees all records -->
        <record id="hotel_booking_manager_rule" model="ir.rule">
            <field name="name">Managers See All Bookings</field>
            <field name="model_id" ref="model_hotel_booking" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hotel_manager'))]" />
        </record>


    </data>


</odoo>