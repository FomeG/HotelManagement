<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hotel_room_tree_view" model="ir.ui.view">
        <field name="name">hotel.room.tree</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="hotel_id" />
                <field name="feature_ids" widget="many2many_tags" options="{'no_create': True}" />
                <field name="bed_type" />
                <field name="price" />
                <field name="last_booking_date" />
                <field name="state" widget="badge"
                    decoration-success="state == 'available'"
                    decoration-warning="state == 'booked'" />

            </list>
        </field>
    </record>


    <!--  Kanban View  -->
    <record id="hotel_room_kanban_view" model="ir.ui.view">
        <field name="name">hotel.room.kanban</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="hotel_id" />
                <field name="bed_type" />
                <field name="price" />
                <field name="state" />
                <field name="feature_ids" />

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">

                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <strong class="o_field_type_char">Room: <field name="name" /></strong>
                                    <div class="float-right">
                                        <field name="state" widget="badge"
                                            decoration-success="state == 'available'"
                                            decoration-warning="state == 'booked'" />
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="text-muted"> Hotel: <field name="hotel_id" />
                                </div>
                                <div>
                                    <field name="bed_type" /> - <field name="price" /> VND </div>
                                <div class="mt-2">
                                    <field name="feature_ids" widget="many2many_tags" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="hotel_room_form_view" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="hotel_id" />
                            <field name="hotel_address" />
                            <field name="name" />
                            <field name="last_booking_date" />
                        </group>
                        <group>a <field name="bed_type" />
                            <field name="price" />
                            <field name="state" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Features">
                            <field name="feature_ids" widget="many2many_tags" />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>


    <!--  view search  -->
    <record id="hotel_room_search_view" model="ir.ui.view">
        <field name="name">hotel.room.search</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="hotel_id" />
                <field name="bed_type" />
                <field name="state" />
                <!--  group by -->
                <group expand="0" string="Group By">
                    <filter string="Hotel" name="group_by_hotel" domain="[]"
                        context="{'group_by': 'hotel_id'}" />
                    <filter string="Bed Type" name="group_by_bed_type" domain="[]"
                        context="{'group_by': 'bed_type'}" />
                    <filter string="Status" name="group_by_state" domain="[]"
                        context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_hotel_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="hotel_room_search_view" />
        <field name="context">{'search_default_group_by_hotel': 1}</field>
    </record>
</odoo>