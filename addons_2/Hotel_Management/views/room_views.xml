<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hotel_room_tree_view" model="ir.ui.view">
        <field name="name">hotel.room.tree</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="hotel_id" />
                <field name="feature_ids" widget="many2many_tags" options="{'no_create': True}" />
                <field name="bed_type" />
                <field name="price" />
                <field name="last_booking_date" />
                <field name="state" />
            </list>
        </field>
    </record>


    <record id="hotel_room_form_view" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="hotel_id" />
                            <field name="hotel_address" />
                            <field name="name" />
                            <field name="last_booking_date" />
                        </group>
                        <group>
                            <field name="bed_type" />
                            <field name="price" />
                            <field name="state" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Features">
                            <field name="feature_ids" widget="many2many_tags" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_hotel_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hotel_room"
        name="Rooms"
        parent="menu_hotel_root"
        action="action_hotel_room"
        sequence="20" />


</odoo>