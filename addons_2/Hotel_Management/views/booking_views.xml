<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="hotel_booking_tree_view" model="ir.ui.view">
        <field name="name">hotel.booking.tree</field>
        <field name="model">hotel.booking</field>
        <field name="priority">10</field> 
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="customer_name" />
                <field name="booking_date" />
                <field name="hotel_id" />
                <field name="room_type" />
                <field name="room_id" />
                <field name="state" widget="badge"
                    decoration-success="state == 'confirmed'"
                    decoration-warning="state == 'draft'" />
            </list>
        </field>
    </record>


    <record id="hotel_booking_form_view" model="ir.ui.view">
        <field name="name">hotel.booking.form</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <button name="action_confirm"
                        string="Confirm"
                        type="object"
                        class="btn-danger"
                        invisible="state != 'draft'" />

                    <button name="action_open_payment_wizard"
                        string="Thanh toÃ¡n"
                        type="object"
                        class="btn-primary"
                        invisible="payment_status != 'unpaid'" />

                    <field name="state" widget="statusbar" />

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="customer_name" />
                            <field name="booking_date" />
                            <field name="payment_status" />
                            <field name="payment_date" />
                            <field name="payment_amount" />
                        </group>
                        <group>
                            <field name="hotel_id" />
                            <field name="room_type" />
                            <field name="room_id" />
                            <field name="check_in" />
                            <field name="check_out" />
                        </group>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>


    <record id="action_hotel_booking" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">list,form</field>
    </record>





</odoo>