<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="hotel_booking_tree_view" model="ir.ui.view">
        <field name="name">hotel.booking.tree</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="customer_name" />
                <field name="booking_date" />
                <field name="hotel_id" />
                <field name="room_type" />
                <field name="room_id" />
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>


    <record id="hotel_booking_form_view" model="ir.ui.view">
        <field name="name">hotel.booking.form</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm"
                        string="Confirm"
                        type="object"
                        class="btn-danger"
                        invisible="state != 'draft'" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="customer_name" />
                            <field name="booking_date" />
                        </group>
                        <group>
                            <field name="hotel_id" />
                            <field name="room_type" />
                            <field name="room_id" />
                            <field name="check_in" />
                            <field name="check_out" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_hotel_booking" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_hotel_booking"
        name="Bookings"
        parent="menu_hotel_root"
        action="action_hotel_booking"
        sequence="30" />


</odoo>