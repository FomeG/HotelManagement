<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="hotel_management_list_view" model="ir.ui.view">
        <field name="name">hotel.management.tree</field>
        <field name="model">hotel.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="address" />
                <field name="floor_count" />
                <field name="room_count" />
                <field name="manager_id" options="{'no_create': True, 'no_create_edit': True}" />
                <field name="employee_ids" widget="many2many_tags" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="hotel_management_form_view" model="ir.ui.view">
        <field name="name">hotel.management.form</field>
        <field name="model">hotel.management</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_hotel_report)d" type="action" string="In thông tin"
                        class="btn-primary" />
                    <button name="%(action_hotel_detailed_report)d" type="action"
                        string="In thông tin chi tiết" class="btn-primary" />
                    <button name="test_btn"
                        string="TEST"
                        type="object"
                        class="btn-danger" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="address" />
                        </group>
                        <group>
                            <field name="floor_count" />
                            <field name="room_count" />
                            <field name="manager_id"
                                options="{'no_create': True, 'no_create_edit': True}" />
                            <field name="employee_ids" widget="many2many_tags"
                                options="{'no_create': True, 'no_create_edit': True}"
                                domain="[('parent_id', '=', manager_id), ('id', '!=', manager_id)]" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh Sách Phòng">
                            <field name="room_ids" />
                        </page>
                        <page string="Nhân Viên">
                            <field name="employee_ids"
                                readonly="1">
                                <list>
                                    <field name="name" string="Tên nhân viên" />
                                    <field name="parent_id" string="Người quản lý" />
                                    <field name="job_title" string="Chức vụ" />
                                    <field name="work_phone" string="Số điện thoại" />
                                    <field name="work_email" string="Email" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="hotel_management_search_view" model="ir.ui.view">
        <field name="name">hotel.management.search</field>
        <field name="model">hotel.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="address" />
                <field name="manager_id" />
                <field name="employee_ids" />
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hotel_management" model="ir.actions.act_window">
        <field name="name">Hotel Management</field>
        <field name="res_model">hotel.management</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Detailed Report Action -->
    <record id="action_hotel_detailed_report" model="ir.actions.report">
        <field name="name">Hotel Detailed Report</field>
        <field name="model">hotel.management</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Hotel_Management.hotel_detailed_report_template</field>
        <field name="report_file">Hotel_Management.hotel_detailed_report_template</field>
        <field name="binding_model_id" ref="model_hotel_management" />
        <field name="binding_type">report</field>
    </record>


</odoo>