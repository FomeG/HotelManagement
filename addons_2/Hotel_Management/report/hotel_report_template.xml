<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hotel_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h1>Student Report</h1>
                    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                        <thead>
                            <tr style="background-color: #f2f2f2;">
                                <th style="padding: 10px; border: 1px solid #ddd;">Hotel</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Address</th>
                                <th style="padding: 10px; border: 1px solid #ddd;">Floor Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #ddd;"><t t-esc="doc.name" /></td>
                                <td style="padding: 10px; border: 1px solid #ddd;"><t t-esc="doc.address" /></td>
                                <td style="padding: 10px; border: 1px solid #ddd;"><t t-esc="doc.floor_count" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
