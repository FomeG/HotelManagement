<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_booking_history_tree" model="ir.ui.view">
        <field name="name">hotel.booking.history.tree</field>
        <field name="model">hotel.booking.history</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="guest_name" />
                <field name="hotel_id" />
                <field name="room_id" />
                <field name="check_in" />
                <field name="check_out" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_booking_history_form" model="ir.ui.view">
        <field name="name">hotel.booking.history.form</field>
        <field name="model">hotel.booking.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="guest_name" />
                            <field name="hotel_id" />
                            <field name="room_id" />
                        </group>
                        <group>
                            <field name="check_in" />
                            <field name="check_out" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hotel_bookinghistory_search_view" model="ir.ui.view">
        <field name="name">hotel.booking.history.search</field>
        <field name="model">hotel.booking.history</field>
        <field name="arch" type="xml">
            <search>
                <field name="guest_name" />
                <field name="check_in" />
                <field name="check_out" />
                <field name="hotel_id" />
                <group expand="0" string="Group By">
                    <filter string="Hotel" name="group_hotel" context="{'group_by': 'hotel_id'}" />
                    <filter string="Room" name="group_room" context="{'group_by': 'room_id'}" />
                    <filter string="Check In Month" name="group_check_in"
                        context="{'group_by': 'check_in'}" />
                </group>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_booking_history" model="ir.actions.act_window">
        <field name="name">Booking History</field>
        <field name="res_model">hotel.booking.history</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="hotel_bookinghistory_search_view"></field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_booking_history"
        name="Booking History"
        parent="Hotel_Management.menu_hotel_root"
        action="action_booking_history"
        sequence="50" />
</odoo>