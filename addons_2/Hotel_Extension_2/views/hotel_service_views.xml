<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_service_form" model="ir.ui.view">
        <field name="name">hotel.service.form</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="service_type" />
                        <field name="price" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_service_list" model="ir.ui.view">
        <field name="name">hotel.service.list</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="service_type" />
                <field name="qty_available" invisible="service_type not in ['food','drink']" />
                <field name="virtual_available" invisible="service_type not in ['food','drink']" />
                <field name="price" />
            </list>
        </field>
    </record>

    <record id="view_hotel_service_search" model="ir.ui.view">
        <field name="name">hotel.service.search</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="service_type" />
                <filter string="Foods &amp; Drinks" name="food"
                    domain="[('service_type', '=', 'food')]" />
                <filter string="Laundry" name="laundry" domain="[('service_type', '=', 'laundry')]" />
                <filter string="Other Services" name="other"
                    domain="[('service_type', '=', 'other')]" />
                <group expand="0" string="Group By">
                    <filter string="Service Type" name="group_by_type"
                        context="{'group_by': 'service_type'}" />
                </group>
            </search>
        </field>
    </record>


    <!-- ThÃªm Kanban View -->
    <record id="view_hotel_service_kanban" model="ir.ui.view">
        <field name="name">hotel.service.kanban</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="service_type" />
                <field name="price" />
                <field name="qty_available" />
                <field name="description" />

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <strong class="o_field_type_char">
                                        <field name="name" />
                                    </strong>
                                    <div class="float-right">
                                        <span class="badge rounded-pill"
                                            t-attf-class="bg-#{
                                            service_type == 'food' and 'success' or
                                            service_type == 'drink' and 'info' or
                                            service_type == 'laundry' and 'warning' or
                                            service_type == 'self' and 'secondary' or 'primary'}">
                                            <field name="service_type" />
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div t-if="record.description.value" class="text-muted mb-2">
                                    <field name="description" />
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p>Qty: <field name="qty_available" /></p>
                                    <strong>Price: <field name="price" /> VND</strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hotel_service" model="ir.actions.act_window">
        <field name="name">Hotel Services</field>
        <field name="res_model">hotel.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_hotel_service_search" />
        <field name="context">{'search_default_group_by_type': 1}</field>
    </record>

    <menuitem id="menu_hotel_service"
        name="Hotel Services"
        parent="Hotel_Management.menu_hotel_root"
        action="action_hotel_service"
        sequence="30" />
</odoo>