<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_service_form" model="ir.ui.view">
        <field name="name">hotel.service.form</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="service_type" />
                        <field name="price" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_service_list" model="ir.ui.view">
        <field name="name">hotel.service.list</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="service_type" />
                <field name="qty_available" invisible="service_type not in ['food','drink']" />
                <field name="virtual_available" invisible="service_type not in ['food','drink']" />
                <field name="price" />
            </list>
        </field>
    </record>

    <record id="view_hotel_service_search" model="ir.ui.view">
        <field name="name">hotel.service.search</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="service_type" />
                <filter string="Foods &amp; Drinks" name="food"
                    domain="[('service_type', '=', 'food')]" />
                <filter string="Laundry" name="laundry" domain="[('service_type', '=', 'laundry')]" />
                <filter string="Other Services" name="other"
                    domain="[('service_type', '=', 'other')]" />
                <group expand="0" string="Group By">
                    <filter string="Service Type" name="group_by_type"
                        context="{'group_by': 'service_type'}" />
                </group>
            </search>
        </field>
    </record>


    <record id="action_hotel_service" model="ir.actions.act_window">
        <field name="name">Hotel Services</field>
        <field name="res_model">hotel.service</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hotel_service_search" />
    </record>

    <menuitem id="menu_hotel_service"
        name="Hotel Services"
        parent="Hotel_Management.menu_hotel_root"
        action="action_hotel_service"
        sequence="30" />
</odoo>