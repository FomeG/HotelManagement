<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_service_inventory_form" model="ir.ui.view">
        <field name="name">hotel.service.inventory.form</field>
        <field name="model">hotel.service.inventory</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                        class="oe_highlight" invisible="state != 'draft'" />
                    <button name="action_done" string="Done" type="object"
                        class="oe_highlight" invisible="state != 'confirmed'" />
                    <button name="action_cancel" string="Cancel" type="object"
                        invisible="state in ('done','cancel')" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="service_id" />
                        </group>
                        <group>
                            <field name="quantity" />
                            <field name="unit_price" />
                        </group>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="view_hotel_service_inventory_list" model="ir.ui.view">
        <field name="name">hotel.service.inventory.list</field>
        <field name="model">hotel.service.inventory</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="date" />
                <field name="service_id" />
                <field name="quantity" />
                <field name="unit_price" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="action_hotel_service_inventory" model="ir.actions.act_window">
        <field name="name">Service Inventory</field>
        <field name="res_model">hotel.service.inventory</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hotel_service_inventory"
        name="Service Inventory"
        parent="Hotel_Management.menu_hotel_root"
        action="action_hotel_service_inventory"
        sequence="35" />
</odoo>