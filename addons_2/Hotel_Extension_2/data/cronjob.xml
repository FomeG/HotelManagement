<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cron_check_maintaining_room" model="ir.cron">
        <field name="name">Check Maintaining Rooms</field>
        <field name="model_id" ref="model_hotel_room" />
        <field name="state">code</field>
        <field name="code">model.cron_check_maintaining_rooms()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="active" eval="True" />
        <field name="user_id" ref="base.user_admin" />
    </record>
</odoo>